@page
@model EndPoint_Ui.Areas.Admin.Pages.Service.IndexModel

@section Script {
    <script src="~/js/pagination.js"></script>
    <script src="~/assets/js/service/index.js"></script>
}
@{
    var routes = new List<NavigationRouteModel>
    {
        new NavigationRouteModel
        {
            areaName = "Admin",
            pageName = "Dashboard",
            actionName = "Index",
            title = "پیشخوان",
            IsActive = false
        },
         new NavigationRouteModel
        {
            areaName = "Admin",
            pageName = "Service",
            actionName = "Index",
            title = "خدمات",
            IsActive = true
        }

    };
}
<div class="row">
    <navigation routes="@routes"></navigation>


</div>


<basic-table table-title="لیست خدمات"
             button-title="ایجاد خدمت"
             button-link="/Admin/Service/Create"
             area="Admin"
             page="Service"
             action="Index"
             search-value="@ViewData["Search"]"
             total-pages="@Model.PageModel.TotalPage"
             current-page="@Model.PageModel.CurrentPage">

    <table class="table table-hover">
        <thead>
            <tr>
              
                <th>تصویر</th>
                <th>عنوان</th>
                <th>عملیات</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.PageModel!.List!)
            {
                <tr id="item_@item.Id">
             
                    <td>
                        <img src="~/gallery/service/@item.ImagePath" 
                        width="60" height="80"
                        class="img-fluid"/>
                    </td>
                    <td>@item.Title</td>
                    <td>
                       
                        <a asp-area="Admin" asp-page="/Service/Edit" asp-route-id="@item.Id"
                           class="btn btn-sm btn-warning">
                            ویرایش
                        </a>
                        <a onclick="Delete('@item.Id')" class="btn btn-sm btn-danger text-white">حذف</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</basic-table> 