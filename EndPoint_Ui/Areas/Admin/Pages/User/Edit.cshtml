@page
@model EndPoint_Ui.Areas.Admin.Pages.User.EditModel

@{
    var routes = new List<NavigationRouteModel>
    {
        new NavigationRouteModel
        {
            areaName = "Admin",
            pageName = "Dashboard",
            actionName = "Index",
            title = "پیشخوان",
            IsActive = false
        },
         new NavigationRouteModel
        {
            areaName = "Admin",
            pageName = "User",
            actionName = "Index",
            title = "کاربران",
            IsActive = false
        },
         new NavigationRouteModel
        {
            areaName = "Admin",
            pageName = "User",
            actionName = "Edit",
            title = "ویرایش کاربر",
            IsActive = false
        }

    };
}

<div class="row">
    <navigation routes="@routes"></navigation>
    <form asp-page="Edit" method="post" class="col-xl-8 col-lg-8 col-md-12 col-sm offset-xl-2 offset-lg-2 card">
        <div class="card-header">
            <h4>ویرایش کاربر </h4>
            @if (ViewData["Alert"] is not null)
            {
                <div class="alert alert-warning">@ViewData["Alert"]</div>
            }
        </div>
        <div class="card-body">
            <div>
                <label class="form-label">نام و نام خانوادگی</label>
                <input type="text" asp-for="User.FullName" class="form-control" />
                <span class="text-danger" asp-validation-for="User.FullName"></span>
            </div>
            <div>
                <label class="form-label">نام کاربری</label>
                <input type="text" asp-for="User.UserName" class="form-control" />
                <span class="text-danger" asp-validation-for="User.UserName"></span>
            </div>

            <div>
                <label class="form-label">پست الکترونیک</label>
                <input type="text" asp-for="User.Email" class="form-control" />
                <span class="text-danger" asp-validation-for="User.Email"></span>
            </div>
            <div>
                <label class="form-label">شماره موبایل</label>
                <input type="number" asp-for="User.PhoneNumber" class="form-control" />
                <span class="text-danger" asp-validation-for="User.PhoneNumber"></span>
            </div>
            <div>
                <label class="form-label">نقش های کاربر</label>
                <select asp-for="User.Roles" id="roles" multiple="multiple" class="select2 form-select">
                    @foreach (var role in (Dictionary<string, string>)ViewData["Roles"]!)
                    {
                        <option selected value="@role.Key">@role.Value</option>
                    }
                </select>

                <span class="text-danger" asp-validation-for="User.Roles"></span>
            </div>
         
            <input type="hidden" id="User" asp-for="User.Id"/>
        </div>
        <div class="card-footer">
            <button class="btn btn-sm btn-success text-white" type="submit">ثبت</button>
            <a asp-page="/User/Index" class="btn btn-sm btn-warning text-white">بازگشت</a>
        </div>
    </form>

</div>
@section Style {
    <link rel="stylesheet" href="~/assets/vendor/libs/select2/select2.css">

}
@section Script {
    <script src="~/assets/js/forms-selects.js"></script>

    <script src="~/assets/js/user/edit.js"></script>
    <script src="~/assets/vendor/libs/select2/select2.js"></script>

    <partial name="_ValidationScriptsPartial.cshtml" />
}