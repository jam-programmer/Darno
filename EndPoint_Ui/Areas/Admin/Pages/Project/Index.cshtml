@page
@model EndPoint_Ui.Areas.Admin.Pages.Project.IndexModel

@section Script {
    <script src="~/js/pagination.js"></script>
    <script src="~/assets/js/project/index.js"></script>
}
@{
    var routes = new List<NavigationRouteModel>
    {
        new NavigationRouteModel
        {
            areaName = "Admin",
            pageName = "Dashboard",
            actionName = "Index",
            title = "پیشخوان",
            IsActive = false
        },
         new NavigationRouteModel
        {
            areaName = "Admin",
            pageName = "Project",
            actionName = "Index",
            title = "پروژه ها",
            IsActive = true
        }

    };
}
<div class="row">
    <navigation routes="@routes"></navigation>


</div>


<basic-table table-title="لیست پروژه ها"
             button-title="ایجاد پروژه"
             button-link="/Admin/Project/Create"
             area="Admin"
             page="Project"
             action="Index"
             search-value="@ViewData["Search"]"
             total-pages="@Model.PageModel.TotalPage"
             current-page="@Model.PageModel.CurrentPage">

    <table class="table table-hover">
        <thead>
            <tr>

                <th>لوگو</th>
                <th>عنوان</th>
                <th>کارفرما</th>
                <th>عملیات</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.PageModel!.List!)
            {
                <tr id="item_@item.Id">

                    <td>
                        <img src="~/gallery/project/@item.LogoPath"
                             width="60" height="80"
                             class="img-fluid" />
                    </td>
                    <td>@item.Title</td>
                    <td>@item.Owner</td>
                    <td>

                        <a asp-area="Admin" asp-page="/Project/Edit" asp-route-id="@item.Id"
                           class="btn btn-sm btn-warning">
                            ویرایش
                        </a>
                        <a onclick="Delete('@item.Id')" class="btn btn-sm btn-danger text-white">حذف</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</basic-table> 