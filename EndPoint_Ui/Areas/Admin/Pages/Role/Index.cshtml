@page
@model EndPoint_Ui.Areas.Admin.Pages.Role.IndexModel
@{
}
@section Script{
    <script src="~/js/pagination.js"></script>
    <script src="~/assets/js/role/index.js"></script>
}
@{
    var routes = new List<NavigationRouteModel>
    {
        new NavigationRouteModel
        {
            areaName = "Admin",
            pageName = "Dashboard",
            actionName = "Index",
            title = "پیشخوان",
            IsActive = false
        },
         new NavigationRouteModel
        {
            areaName = "Admin",
            pageName = "Role",
            actionName = "Index",
            title = "نقش های کاربری",
            IsActive = true
        }

    };
}
<div class="row">
    <navigation routes="@routes"></navigation>

  
</div>

    
<basic-table table-title="لیست نقش ها"
             button-title="ایجاد نقش"
             button-link="/Admin/Role/Create"
             area="Admin"
             page="Role"
             action="Index"
             search-value="@ViewData["Search"]"
             total-pages="@Model.PageModel.TotalPage"
             current-page="@Model.PageModel.CurrentPage">
    
    <!-- محتوای جدول اینجا قرار می‌گیرد -->
    <table class="table table-hover">
        <thead>
            <tr>
                <th>نام فارسی</th>
                <th>نام انگلیسی</th>
                <th>عملیات</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.PageModel!.List!)
            {
                <tr id="item_@item.Id">
                    <td>@item.PersianName</td>
                    <td>@item.Name</td>
                    <td>
                        <a asp-area="Admin" asp-page="/Role/Edit" asp-route-id="@item.Id" 
                           class="btn btn-sm btn-warning">
                            ویرایش
                        </a>
                        <a onclick="Delete('@item.Id')" class="btn btn-sm btn-danger text-white">حذف</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</basic-table>