@page
@model EndPoint_Ui.Areas.Admin.Pages.Member.EditModel


@{
    var routes = new List<NavigationRouteModel>
    {
        new NavigationRouteModel
        {
            areaName = "Admin",
            pageName = "Dashboard",
            actionName = "Index",
            title = "پیشخوان",
            IsActive = false
        },
         new NavigationRouteModel
        {
            areaName = "Admin",
            pageName = "Member",
            actionName = "Index",
            title = "اعضا",
            IsActive = false
        },
         new NavigationRouteModel
        {
            areaName = "Admin",
            pageName = "Member",
            actionName = "Edit",
            title = "ویرایش عضو",
            IsActive = false
        }

    };
}

<div class="row">
    <navigation routes="@routes"></navigation>
    <form asp-page="Edit" method="post" enctype="multipart/form-data"
          class="col-xl-8 col-lg-8 col-md-12 col-sm offset-xl-2 offset-lg-2 card">
        <div class="card-header">
            <h4>ویرایش عضو </h4>
            @if (ViewData["Alert"] is not null)
            {
                <div class="alert alert-warning">@ViewData["Alert"]</div>
            }
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-12">
                    <img id="imagePath_1" width="100" height="80"
                        src="~/Gallery/Member/@Model.Member.ImagePath" />
                </div>
                <div class="col-3">
                    <label class="form-label">تصویر</label>
                    <input asp-for="Member.ImageFile"
                           onchange="ChangeImage(this,1)" class="form-control" type="file" />
                    <span class="text-danger" asp-validation-for="Member.ImageFile"></span>
                </div>
            </div>
            <div>
                <label class="form-label">نام و نام خانوادگی</label>
                <input type="text" asp-for="Member.FullName" class="form-control" />
                <span class="text-danger" asp-validation-for="Member.FullName"></span>
            </div>

            <div>
                <label class="form-label">عنوان شغلی</label>
                <input type="text" asp-for="Member.JobTitle" class="form-control" />
                <span class="text-danger" asp-validation-for="Member.JobTitle"></span>
            </div>

            <div>
                <label class="form-label">ایمیل</label>
                <input type="text" asp-for="Member.Email" class="form-control" />
            </div>
            <div>
                <label class="form-label">گیت هاب</label>
                <input type="text" asp-for="Member.GitHub" class="form-control" />
            </div>
            <div>
                <label class="form-label">اینستاگرام</label>
                <input type="text" asp-for="Member.Instagram" class="form-control" />
            </div>
            <div>
                <label class="form-label">لینکدین</label>
                <input type="text" asp-for="Member.Linkedin" class="form-control" />
            </div>

            <input type="hidden" asp-for="Member.Id" />
            <input type="hidden" asp-for="Member.ImagePath" />

        </div>
        <div class="card-footer">
            <button class="btn btn-sm btn-success text-white" type="submit">ثبت</button>
            <a asp-page="/Member/Index" class="btn btn-sm btn-warning text-white">بازگشت</a>
        </div>
    </form>

</div>

@section Script {

    <script src="~/assets/js/upload.js"></script>

    <partial name="_ValidationScriptsPartial.cshtml" />
}


