@page
@model EndPoint_Ui.Areas.Admin.Pages.Member.IndexModel



@section Script {
    <script src="~/js/pagination.js"></script>
    <script src="~/assets/js/member/index.js"></script>
}
@{
    var routes = new List<NavigationRouteModel>
    {
        new NavigationRouteModel
        {
            areaName = "Admin",
            pageName = "Dashboard",
            actionName = "Index",
            title = "پیشخوان",
            IsActive = false
        },
         new NavigationRouteModel
        {
            areaName = "Admin",
            pageName = "Member",
            actionName = "Index",
            title = "اعضا ",
            IsActive = true
        }

    };
}
<div class="row">
    <navigation routes="@routes"></navigation>


</div>


<basic-table table-title="لیست اعضا"
             button-title="ایجاد عضو"
             button-link="/Admin/Member/Create"
             area="Admin"
             page="Member"
             action="Index"
             search-value="@ViewData["Search"]"
             total-pages="@Model.PageModel.TotalPage"
             current-page="@Model.PageModel.CurrentPage">

    <table class="table table-hover">
        <thead>
            <tr>

                <th>تصویر</th>
                <th>نام و نام خانوادگی</th>
                <th>عنوان شغلی</th>
                <th>عملیات</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.PageModel!.List!)
            {
                <tr id="item_@item.Id">

                    <td>
                        <img src="~/gallery/Member/@item.ImagePath"
                             width="60" height="80"
                             class="img-fluid" />
                    </td>
                    <td>@item.FullName</td>
                    <td>@item.JobTitle</td>
                    <td>

                        <a asp-area="Admin" asp-page="/Member/Edit" 
                        asp-route-id="@item.Id"
                           class="btn btn-sm btn-warning">
                            ویرایش
                        </a>
                        <a onclick="Delete('@item.Id')" 
                        class="btn btn-sm btn-danger text-white">حذف</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</basic-table>